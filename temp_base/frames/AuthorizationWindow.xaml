<Window x:Class="temp_base.frames.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:temp_base.frames"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="200" Width="400">

    <Grid Height="184" VerticalAlignment="Center">
        <Label Content="Авторизация в AdminPanel" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <TextBox x:Name="LoginField"  HorizontalAlignment="Center" Margin="0,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" materialDesign:HintAssist.Hint="Логин"/>
        <TextBox x:Name="PasswordField" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" materialDesign:HintAssist.Hint="Пароль"/>
        <Button Content="Авторизоваться" HorizontalAlignment="Center" Margin="0,125,0,0" VerticalAlignment="Top" Height="26" Width="168" Click="AuthorizationButtonClick"/>
    </Grid>

</Window>
